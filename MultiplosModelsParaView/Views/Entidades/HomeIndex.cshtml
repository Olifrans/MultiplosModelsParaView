@model MultiplosModelsParaView.Models.HomeIndex
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<div class="container">
    <fieldset>
        <legend>

                <p>
                    Produtp Id: <input type="text" value="@Model.Produtos.Id" />
                </p>

                <p>
                    Nome Id: <input type="text" value="@Model.Produtos.Nome" />
                </p>


                <p>
                    Categorias:
                    <select>
                        @foreach (var item in Model.Categorias)
                        {
                            <option value="@item.Id">@item.Nome"</option>
                        }
                    </select>
                </p>

                <p>
                    Marcas:
                    <select>
                        @foreach (var item in Model.Marcas)
                        {
                            <option value="@item.Id">@item.Nome"</option>
                        }
                    </select>
                </p>




        </legend>
    </fieldset>

</div>

